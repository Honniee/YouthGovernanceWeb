# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.onrender.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=youth_office_db
DB_USER=your_username
DB_PASSWORD=your_password

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (for notifications and contact forms)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# reCAPTCHA Configuration (Enterprise)
RECAPTCHA_API_KEY=your-recaptcha-api-key-here
RECAPTCHA_PROJECT_ID=your-google-cloud-project-id
RECAPTCHA_MIN_SCORE=0.5

# Security Configuration
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
SESSION_TIMEOUT=24h

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_MAX_FILES=5 